<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CaesarCipherFragment">


    <TextView
        android:id="@+id/titleCaesarCipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caesar Cipher"
        android:layout_margin="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

   <EditText
       android:id="@+id/etInput"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:hint="Input Plain Text"
       android:inputType="text"
       app:layout_constraintTop_toBottomOf="@id/titleCaesarCipher"/>

    <EditText
        android:id="@+id/etShiftKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input key"
        android:inputType="number"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/etInput"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etShiftKey"/>

    <Button
        android:id="@+id/btnEncrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encrypt"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"/>

    <Button
        android:id="@+id/btnDecrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decrypt"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEncrypt"/>

</androidx.constraintlayout.widget.ConstraintLayout>